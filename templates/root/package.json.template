{
  "name": "{{projectName}}",
  "private": true,
  "packageManager": "bun@1.1.43",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter=@{{scope}}/api",
    "dev:web": "turbo dev --filter=@{{scope}}/web",
    "dev:mobile": "turbo dev --filter={{projectName}}-mobile",
    "build": "turbo build",
    "deploy:api": "turbo deploy --filter=@{{scope}}/api",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "ci": "turbo lint typecheck test build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "{{eslintVersion}}",
    "husky": "{{huskyVersion}}",
    "prettier": "{{prettierVersion}}",
    "turbo": "{{turboVersion}}",
    "typescript": "{{typescriptVersion}}"
  }
}
